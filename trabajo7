<script>
function validarFormulario(e){
  e.preventDefault();
  alert("¡Formulario enviado correctamente!");
}
function cambiarModo(){ document.body.classList.toggle("modo-claro"); }
function relojAutomatico(){ setInterval(()=>{
  document.getElementById("tiempo").textContent=new Date().toLocaleTimeString();
},1000);} window.onload=relojAutomatico;
